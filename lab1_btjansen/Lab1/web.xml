<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Lab1 Servlet</display-name>
  <description>Lab1 for SER422 Lab1</description>

  <servlet>
    <servlet-name>Lab1</servlet-name>
    <servlet-class>Lab1Servlet</servlet-class>
    <init-param>
    		<param-name>taskList</param-name>
    		<param-value>taskList.txt</param-value>
  	</init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>Lab1</servlet-name>
    <url-pattern>/todos</url-pattern>
  </servlet-mapping>

 <welcome-file-list>
   <welcome-file>index.html</welcome-file>
 </welcome-file-list>

</web-app>